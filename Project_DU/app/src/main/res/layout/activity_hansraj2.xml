<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">



   <ScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">


           <ImageView
               android:id="@+id/ducollegesid"
               android:layout_width="match_parent"
               android:layout_height="match_parent"

               android:layout_alignParentStart="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_alignParentEnd="true"

               android:layout_alignParentRight="true"
               android:layout_marginStart="0dp"
               android:layout_marginLeft="0dp"
               android:layout_marginTop="0dp"
               android:layout_marginEnd="0dp"
               android:layout_marginRight="0dp"
               android:background="@drawable/a123" />


           <ImageButton
               android:id="@+id/readmoreH"
               android:layout_width="60dp"
               android:layout_height="16dp"
               android:layout_alignStart="@+id/ducollegesid"
               android:layout_alignLeft="@+id/ducollegesid"
               android:layout_alignTop="@+id/ducollegesid"
               android:layout_alignEnd="@+id/ducollegesid"
               android:layout_alignRight="@+id/ducollegesid"
               android:layout_marginStart="228dp"
               android:layout_marginLeft="228dp"
               android:layout_marginTop="327dp"
               android:layout_marginEnd="33dp"
               android:layout_marginRight="33dp"
               android:background="@drawable/learnmone" />

           <ImageButton
               android:id="@+id/readmoreRamj"
               android:layout_width="68dp"
               android:layout_height="18dp"
               android:layout_below="@+id/readmoreH"
               android:layout_alignEnd="@+id/ducollegesid"
               android:layout_alignRight="@+id/ducollegesid"

               android:layout_alignParentStart="true"
               android:layout_alignParentLeft="true"
               android:layout_marginStart="221dp"
               android:layout_marginLeft="221dp"
               android:layout_marginTop="303dp"
               android:layout_marginEnd="31dp"
               android:layout_marginRight="31dp"
               android:background="@drawable/learnmone" />

       </RelativeLayout>
   </ScrollView>

</android.support.v4.widget.DrawerLayout>
